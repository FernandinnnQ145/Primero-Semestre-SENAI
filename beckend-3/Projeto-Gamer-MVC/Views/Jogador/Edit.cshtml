@model Jogador

@{
    ViewData["Title"] = "Edit";
}

<h2>Edição dos jogadores</h2>

<form method="post" action="@Url.Action("Atualizar")" enctype="multipart/form-data">


<input type="hidden" name="IdJogador" value="@ViewBag.Jogador.IdJogador">


    <label for="">Nome</label>
    <input type="text" name="Nome" value="@ViewBag.Jogador.Nome">


     <label for="">Email</label>
    <input type="text" name="Email" value="@ViewBag.Jogador.Email">
     <label for="">Senha</label>
    <input type="password" name="Senha" value="@ViewBag.Jogador.Senha">
      <label for="">Equipe</label>
    <select name="IdEquipes" id="IdEquipes">
          <option value="0">Selecione uma equipe: </option>
         @foreach (Equipes equipe in ViewBag.Equipes)
        {
            @if (equipe.IdEquipes == @ViewBag.Jogador.IdEquipes)
            {
                <option value="@equipe.IdEquipes" selected>@equipe.Nome</option>
            }
            else{
                 <option value="@equipe.IdEquipes">@equipe.Nome</option>

            }
        }</select>

    <button type="submit">Atualizar</button>
</form>