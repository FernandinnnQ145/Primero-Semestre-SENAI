@model Equipes

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/equipes.css">

<h1>Edição de Equipes</h1>
@if (ViewBag.UserName == null)
{
   
    <h2>Você pode se logar <a asp-area="" asp-controller="Login" asp-action="Index">Clicando Aqui</a></h2>
}
else
{

<h2>Edição de Equipes</h2>

<form method="post" action="@Url.Action("Atualizar")" enctype="multipart/form-data">
    <input type="hidden" name="IdEquipes" value="@ViewBag.Equipes.IdEquipes">
    <label for="">Nome</label><br>
    <input type="text" name="Nome" value="@ViewBag.Equipes.Nome"><br><br>
    <label for="">Imagem</label><br>
    <input type="file" name="Imagem" value="@ViewBag.Equipes.Imagem"><br><br>
    <button class="btn btn-warning" type="submit">Atualizar</button>
</form>
}